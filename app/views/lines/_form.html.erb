<%= form_for @line, url: url do |f| %>
  <div class="field">
    <%= f.label :mode_id, 'Mode' %><br/>
    <%= f.select :mode_id, options_from_collection_for_select(Mode.all, 'id', 'name', selected: @line.mode_id),
                 { include_blank: true }, class: 'form-control select2' %>
  </div><br/>

  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, class: 'form-control' %>
  </div><br/>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, rows: 5, cols: 100, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>