<%= form_for @mode, url: url do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, class: 'form-control' %>
  </div><br/>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, rows: 5, cols: 100, class: 'form-control' %>
  </div><br/>

  <div class="field">
    <%= f.label :icon %><br/>
    <div class="input-group">
      <span class="input-group-addon"><i id="mode-icon-selector" class="fa fa-spinner"></i></span>
      <%= f.text_field :icon, class: 'form-control', id: 'mode-icon-input' %>
    </div>
    <span class="help-block">Icons from <a href="http://fontawesome.io/icons">FontAwesome</a>. Exclude the <code>fa fa-</code> prefix.</span>
  </div><br/>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>