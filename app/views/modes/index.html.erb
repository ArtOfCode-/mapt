<h1>Modes of Travel</h1>
<% if current_user&.has_role?(:admin) %>
  <p><%= link_to '+ Create mode', new_mode_path %></p>
<% end %>

<% @modes.in_groups_of(3).map(&:compact).each do |g| %>
  <div class="row">
    <% g.each do |m| %>
      <%= render 'mode', mode: m %>
    <% end %>
  </div>
<% end %>
